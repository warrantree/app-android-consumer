<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.wintech.shoped.WelcomeActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="240dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:elevation="8dp"
        android:src="@drawable/shoped_logo_normal" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/login_et_usr_mobnum_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/units_10"
        android:textColorHint="#FFF">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_rounded_white"
            android:hint="Mobile Number"
            android:padding="@dimen/units_10"
            android:paddingStart="@dimen/units_40"
            android:textColor="#FFF"
            android:textColorHint="#FFF"
            android:textSize="20sp" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/welcome_btn_getstarted"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_et_usr_mobnum_lay"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/box_rounded_white"
        android:padding="20dp"
        android:text="Get Started"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome_btn_getstarted"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Already a member? Sign in here"
        android:textColor="#FFF"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:padding="24dp"
        android:text="Need Help?"
        android:textColor="#FFF"
        android:textSize="18sp" />
    <!--    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/units_10"
            android:text="welcome user"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#eeeeee"
            android:textSize="28sp"
            android:textStyle="bold" />-->

</RelativeLayout>

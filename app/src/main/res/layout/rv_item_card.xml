<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dip"
    android:layout_marginEnd="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginStart="2dp"
    android:layout_marginTop="6dp"
    android:background="@drawable/rv_card_back"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/rv_item_image"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_weight="5"
        android:adjustViewBounds="true"
        android:background="@drawable/rv_card_back"
        android:cropToPadding="true"
        android:elevation="2dp"
        android:foregroundGravity="bottom"
        android:scaleType="fitEnd"
        app:srcCompat="@drawable/warrantree_logo" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:elevation="4dip"
        android:padding="4dip">

        <TextView
            android:id="@+id/rv_tv_ProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Motorola G4 Plus"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rv_tv_ProductCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rv_tv_ProductName"
            android:text="SmartPhone"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/rv_tv_CompanyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rv_tv_ProductCategory"
            android:text="Motorola"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/rv_tv_warranty_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rv_tv_CompanyName"
            android:text="Expires In: 10 Days!"
            android:textSize="20sp"
            android:textStyle="italic" />

        <ImageButton
            android:id="@+id/rv_btn_remind"
            android:layout_width="@dimen/rv_btn_sqr_dimen"
            android:layout_height="@dimen/rv_btn_sqr_dimen"
            android:layout_alignTop="@+id/rv_btn_share"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/rv_btn_share"
            android:layout_toStartOf="@+id/rv_btn_share"
            android:background="@drawable/rv_card_back"
            android:elevation="1dip"
            app:srcCompat="@drawable/ic_alarm_add_black_24px" />

        <ImageButton
            android:id="@+id/rv_btn_share"
            android:layout_width="@dimen/rv_btn_sqr_dimen"
            android:layout_height="@dimen/rv_btn_sqr_dimen"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/rv_btn_claim"
            android:layout_toStartOf="@+id/rv_btn_claim"
            android:background="@drawable/rv_card_back"
            android:elevation="1dip"
            app:srcCompat="@drawable/ic_menu_share" />

        <ImageButton
            android:id="@+id/rv_btn_claim"
            android:layout_width="@dimen/rv_btn_sqr_dimen"
            android:layout_height="@dimen/rv_btn_sqr_dimen"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/rv_btn_offer"
            android:layout_toStartOf="@+id/rv_btn_offer"
            android:background="@drawable/rv_card_back"
            android:elevation="1dip"
            app:srcCompat="@drawable/ic_menu_manage" />

        <ImageButton
            android:id="@+id/rv_btn_offer"
            android:layout_width="@dimen/rv_btn_sqr_dimen"
            android:layout_height="@dimen/rv_btn_sqr_dimen"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/rv_card_back"
            android:elevation="1dip"
            app:srcCompat="@drawable/ic_local_offer_black_48px" />

    </RelativeLayout>

    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/rv_card_back_red"
        android:elegantTextHeight="true"
        android:elevation="2dp"
        android:textSize="22sp" />
</LinearLayout>
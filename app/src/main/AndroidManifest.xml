<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mate.android.warrantee">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".auth.LoginActivity" />
        <activity android:name=".auth.SignUpActivity" />
        <activity
            android:name=".activities.PastOrdersActivity"
            android:parentActivityName=".activities.PastOrdersActivity" />
        <activity android:name=".activities.SelectDeviceActivity" />
        <activity android:name=".auth.MobileVerificationActivity" />
        <activity
            android:name=".activities.ProductListActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.ProductDetailsActivity"
            android:parentActivityName=".activities.ProductListActivity" />
        <activity android:name=".activities.AlertActivity"></activity>
    </application>

</manifest>